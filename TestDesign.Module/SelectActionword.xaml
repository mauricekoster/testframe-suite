<Window x:Class="TestDesign.Module.SelectActionword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select actionword" Height="420" Width="450">
    <Grid Background="LightGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300*" />
            <ColumnDefinition Width="150" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="305*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.ColumnSpan="2" Margin="0" Padding="10" Name="textBlock1" Text="Select the actionword to be inserted." FontFamily="Verdana" FontWeight="SemiBold" Background="White" />
        
        <TreeView  Margin="20" Name="treeView1" Grid.Row="1" />
        <StackPanel Name="stackPanel1" Grid.Column="1"  Grid.Row="1" Margin="0">
            <Button Content="Select" Margin="10,10,10,5" Name="btnSelect" Click="btnSelect_Click" IsDefault="True" />
            <Button Content="Cancel" Margin="10,5,10,5" Name="btnCancel" IsCancel="True" Click="btnCancel_Click" />
        </StackPanel>
        
    </Grid>
</Window>
