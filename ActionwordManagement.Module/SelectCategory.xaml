<Window x:Class="ActionWordManagement.Module.SelectCategory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select category" mc:Ignorable="d" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DesignHeight="331" d:DesignWidth="300" SizeToContent="WidthAndHeight" >
    <StackPanel>
        <TreeView Height="250" Name="tvCategories" Width="Auto" SelectedItemChanged="tvCategories_SelectedItemChanged" MouseDoubleClick="tvCategories_MouseDoubleClick" />
        <Button Content="Select" Height="23" Name="btnSelect" Width="auto" Margin="10" Click="btnSelect_Click" />
    </StackPanel>
</Window>
