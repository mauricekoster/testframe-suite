<Window x:Class="TestManagement.Module.ManageCategories"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage categories" Height="498" Width="300">
    <StackPanel>
        <TreeView Height="250" Name="tvCategories" Width="Auto"  />
        <Button Content="Add toplevel" Height="23" Name="btnAddRoot" Width="auto" Margin="10 10 10 3"/>
        <Button Content="Add child" Height="23" Name="btnAddChild" Width="auto" Margin="10 3 10 3"/>
        <Button Content="Rename" Height="23" Name="btnRename" Width="auto" Margin="10 3 10 3"/>
        <Button Content="Delete" Height="23" Name="btnDelete" Width="auto" Margin="10 3 10 3"/>
        <Button Content="Save and close" Height="23" Name="btnSave" Width="auto" Margin="10 20 10 3" Click="btnSave_Click" />
        <Button Content="Cancel" Height="23" Name="btnCancel" Width="auto" Margin="10 3 10 3"/>
    </StackPanel>
</Window>
